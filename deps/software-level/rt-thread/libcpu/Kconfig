config ARCH_RISCV
    bool

config ARCH_RISCV_FPU
    bool

config ARCH_RISCV_VECTOR
    bool

    if ARCH_RISCV_VECTOR
        choice
            prompt "RISCV Vector Vlen"
            default ARCH_VECTOR_VLEN_128

            config ARCH_VECTOR_VLEN_128
                bool "128"
            config ARCH_VECTOR_VLEN_256
                bool "256"
        endchoice
    endif

